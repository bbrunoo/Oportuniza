{
  "Logging": {
    "LogLevel": {
      // nível de log padrão da aplicação
      "Default": "Information",

      // nível de log para componentes internos do ASP.NET Core
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    // string de conexão do banco local ou produção (exemplo)
    "DefaultConnection": "Server=SERVIDOR;Database=NOME_BANCO;User ID=USUARIO;Password=SENHA;TrustServerCertificate=True"
  },

  "AzureStorage": {
    // nome do container onde arquivos/imagens serão armazenados
    "ContainerName": "image"
  },

  "Keycloak": {
    // URL do realm do Keycloak
    "Authority": "https://SEU-DOMINIO-KEYCLOAK/realms/NOME-REALM",

    // cliente esperado pelo backend (exemplo)
    "Audience": "account"
  },

  "Azure": {
    // string de conexão do Azure Storage (exemplo)
    "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=CONTA;AccountKey=SUA_CHAVE;EndpointSuffix=core.windows.net",

    "Moderator": {
      // chave da API de moderação de conteúdo
      "ApiKey": "SUA_API_KEY",

      // endpoint da API de moderação
      "Endpoint": "https://SEU-ENDPOINT.cognitiveservices.azure.com/"
    }
  },

  "Mailgun": {
    // sua API key pública (não incluir a válida)
    "ApiKey": "API_KEY_AQUI",

    // domínio configurado no Mailgun
    "Domain": "seu-dominio-mailgun.com",

    // remetente padrão de emails
    "Sender": "SeuProjeto <postmaster@seu-dominio-mailgun.com>"
  },

  "jwt": {
    // chave do JWT usada no backend
    "secretKey": "SUA_SECRET_KEY_AQUI",

    // emissor do token
    "issuer": "SeuBackendAPI",

    // público-alvo do token
    "audience": "SeuFrontendClient",

    // tempo de expiração do token
    "expiryMinutes": "120"
  },

  "Gemini": {
    // chave de API do Google Gemini
    "ApiKey": "SUA_API_KEY_AQUI"
  },

  // senha do certificado de desenvolvimento Kestrel, se existir
  "Kestrel:Certificates:Development:Password": "SENHA_CERTIFICADO",

  // hosts permitidos
  "AllowedHosts": "*"
}
